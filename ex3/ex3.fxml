<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="252.0" prefWidth="515.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ex3.Controller">
   <RadioButton fx:id="days" layoutX="39.0" layoutY="68.0" mnemonicParsing="false" onAction="#checkDays"
                text="in Days"/>
   <RadioButton fx:id="hours" layoutX="171.0" layoutY="68.0" mnemonicParsing="false" onAction="#checkHours"
                text="in Hours"/>
   <Label layoutX="39.0" layoutY="14.0" text="Travel time to the moon"/>
   <Label layoutX="41.0" layoutY="141.0" text="Speed per hour"/>
   <Label layoutX="42.0" layoutY="203.0" text="Traveltime"/>
   <TextField fx:id="traveltime" layoutX="171.0" layoutY="136.0" onAction="#Error"/>
   <TextField fx:id="outputtravel" layoutX="171.0" layoutY="198.0"/>
   <Button layoutX="425.0" layoutY="212.0" mnemonicParsing="false" onAction="#handleCloseButtonAction" prefHeight="27.0"
           prefWidth="58.0" text="Exit"/>
   <Button layoutX="390.0" layoutY="136.0" mnemonicParsing="false" onAction="#calculate" text="Calculate"/>
</AnchorPane>
